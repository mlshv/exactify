{
  "compilerOptions": {
    "incremental": true,
    "target": "es6",
    "module": "ES6",
    "lib": ["es6", "es2015"],
    "types": ["node"],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "declaration": true,
    "outDir": "lib",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"]
}
